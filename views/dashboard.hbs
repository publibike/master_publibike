<div class="ui two column grid content">
	<div class="column">
		<div class="inside-column">
			<table id="table_id" class="display">
				<thead>
					<tr>
						<th>Nombre</th>
						<th>Usuario</th>
						<th>Email</th>
					</tr>
				</thead>
				<tbody>
					{{#each usuarios}}
					<tr>
						<td>{{this.nombre}}</td>
						<td><a href="/admin/usuario/{{this._id}}">{{this.usuario}}</a></td>
						<td>{{this.email}}</td>
					</tr>
					{{/each}}
				</tbody>
			</table>
		</div>
	</div>
	<div class="column">
		<div class="inside-column">
			<div class="top attached ui statistics">
				<div class="data-statistics">
					<h3>Empresas Registradas</h3>
				</div>
				<div class="graphic-statistics" data-percent="100">
					<h3>Campañas Realizadas</h3>
				</div>
			</div>
			{{#each empresas}}
			<div class="top attached ui statistics">
				<div class="data-statistics">
					{{this.nombre}}
				</div>
				<div class="ui progress blue graphic-statistics" data-percent="1000">
					<div class="bar" style="transition-duration: 300ms; width: {{this.usuarios.length}}%;">
						<div class="progress">{{this.campanas.length}}</div>
					</div>
				</div>
			</div>
			{{/each}}
		</div>
		<hr>
		<div class="inside-column">
			<h2>Campañas Vigentes</h2>
			<div class="top attached ui statistics">
				<div class="data-statistics">
					<h3>Campaña</h3>
				</div>
				<div class="graphic-statistics" data-percent="100">
					<h3>Usuarios Registrados</h3>
				</div>
			</div>
			{{#each campanas}}
			<div class="top attached ui statistics">
				<div class="data-statistics">
					{{this.nombre}}
				</div>
				<div class="ui progress blue graphic-statistics" data-percent="1000">
					<div class="bar" style="transition-duration: 300ms; width: {{this.usuarios.length}}%;">
						<div class="progress">{{this.usuarios.length}}</div>
					</div>
				</div>
			</div>
			{{/each}}
		</div>
	</div>
</div>
<script>
	const token = "{{ token }}"
	localStorage.setItem('token', token)
</script>